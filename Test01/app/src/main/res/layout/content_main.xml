<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.margaux.test01.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--android:text="Coucou je suis une apllication de test pour Margaux"-->

    <TextView
        android:text="Musique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView_title_music"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageView_music"
        android:layout_alignLeft="@+id/textView_title_music"
        android:layout_alignStart="@+id/textView_title_music"
        android:layout_alignTop="@+id/textView_description_music"
        android:layout_alignBottom="@+id/textView_description_music" />

    <TextView
        android:text="Description de la musique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView_description_music"
        android:layout_below="@+id/textView_title_music"
        android:layout_toRightOf="@+id/imageView_music"
        android:layout_toEndOf="@+id/imageView_music"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="150dp"
        android:id="@+id/textView_title_film"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageView_film"
        android:layout_alignLeft="@+id/textView_title_film"
        android:layout_alignStart="@+id/textView_title_film"
        android:layout_alignTop="@+id/textView_description_film"
        android:layout_alignBottom="@+id/textView_description_film" />

    <TextView
        android:text="Description du film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView_description_film"
        android:layout_below="@+id/textView_title_film"
        android:layout_toRightOf="@+id/imageView_film"
        android:layout_toEndOf="@+id/imageView_film"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Séries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="300dp"
        android:id="@+id/textView_title_serie"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageView_serie"
        android:layout_alignLeft="@+id/textView_title_serie"
        android:layout_alignStart="@+id/textView_title_serie"
        android:layout_alignTop="@+id/textView_description_serie"
        android:layout_alignBottom="@+id/textView_description_serie" />

    <TextView
        android:text="Description de la série"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView_description_serie"
        android:layout_below="@+id/textView_title_serie"
        android:layout_toRightOf="@+id/imageView_serie"
        android:layout_toEndOf="@+id/imageView_serie"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
