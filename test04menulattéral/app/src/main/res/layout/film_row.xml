<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/film_row"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <TextView
        android:id="@+id/film_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="nom du film"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/film_poster"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_films" />

        <TextView
            android:id="@+id/film_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_alignTop="@id/film_poster"
            android:text="année du film"/>

        <TextView
            android:id="@+id/film_producer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/film_year"
            android:text="réalisatuer du film"/>
        <TextView
            android:id="@+id/film_actors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/film_producer"
            android:text="acteurs du film"/>
        <TextView
            android:id="@+id/film_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/film_actors"
            android:text="genre du film"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ceci sera le résumé du film qui prendra tout plein de place parfois et puis parfois non.
Mais parfois si quand même donc il faut fair attention."/>
</LinearLayout>