<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/film_row"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/music_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nom de la musique"
        style="@style/subtitleMedia"/>

    <LinearLayout
        android:id="@+id/content_music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/music_poster"
            android:contentDescription="poster"
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_menu_musics"
            android:background="@color/colorBackgroundPoster"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/music_year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="annÃ©e de la musique"/>

            <TextView
                android:id="@+id/music_mainArtist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Artiste principal de la musique"/>
            <TextView
                android:id="@+id/music_artists"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="artistes secondaires de la musique"/>
            <TextView
                android:id="@+id/music_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="genre de la musique"/>
            <Button
                android:id="@+id/music_clip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir le Clip"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>