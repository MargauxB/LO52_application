<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="myBackground">
        <item name="android:background">@color/myBackgroundColor</item>
    </style>
    <style name="myText">
        <item name="android:textColor">@color/myTextColor</item>
    </style>

    <style name="myButtonStyle">
        <item name="android:textColor">@color/myButtonTextColor</item>
        <item name="android:background">@drawable/button_style</item>
    </style>
    <style name="myButtonStyle_selected">
        <item name="android:background">@drawable/button_style_selected</item>
    </style>

    <style name="myButtonShowHide">
        <item name="android:textColor">@color/myButtonTextColor</item>
        <item name="android:background">@drawable/button_show_hide</item>
    </style>
    <style name="myButtonShowHide_selected">
        <item name="android:background">@drawable/button_show_hide_selected</item>
    </style>
    <style name="translucide">
        <item name="android:background">@color/translucide</item>
    </style>

</resources>
